type User {
  id: ID! @unique
  email: String! @unique
  password: String!
  displayName: String
  photoUrl: String
  statusMsg: String
  friends: [User!]! @relation(name: "Friend")
  created: DateTime!
  updated: DateTime!
}

type Chatroom {
  id: ID! @unique
  chats: [Chat!]! @relation(name: "Chat")
  userIds: [String]
  created: DateTime!
  updated: DateTime!
}

type Chat {
  id: ID! @unique
  sender: User!
  message: String
  created: DateTime!
  updated: DateTime!
}

type AuthPayload {
  token: String!
  user: User!
}
