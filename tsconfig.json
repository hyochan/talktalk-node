
{
  "compilerOptions": {
    "target": "es6",
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "lib": ["es2016", "esnext"],
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/*"
      ]
    },
    "types": [
      "node_modules/@types/*",
      "src/env.d.ts"
    ]
  },
  "include": [
    "src"
  ]
}
